{
  "name": "RSS4YouTube",
  "description": "Copy the YouTube URL for RSS to the clipboard.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16-gray.png",
      "48": "icons/icon48-gray.png",
      "128": "icons/icon128-gray.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}